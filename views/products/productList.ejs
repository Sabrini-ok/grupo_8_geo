<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body>
    <header>
        <%- include('./partials/header') %>
    </header>
    
    <main>
        <div class="topList">
            <h3>Listado de productos</h3>
            <a href="/product/create">
                <button class="primary" type="button">Crear Producto</button>
            </a>
        </div>

        <article class="productList">
            <% products.forEach(producto => { %>
                <section class="productoDeLista">
                    <div class="img-container">
                        <img src="/img/prodImages/<%=producto.image%>">
                    </div>
                    <div class="precioDeLista">
                        <h2>$ <%= producto.price %></h2>
                        <p><%= producto.masBuscado %></p>
                    </div>
                    <div class="descripcionDeLista">
                        <h4><%= producto.productName %></h4>
                        <p><%= producto.description %></p>
                        
                        <form action="/product/<%= producto.id %>/delete" method="post">
                            <button class="primary" type="submit">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                        
                        <a href="/product/<%= producto.id %>/edit">
                            <button class="primary">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>
                        </a>
                    </div>
                </section>
            <% }) %>
        </article>
    </main>

    <footer>
        <%- include('./partials/footer') %>
    </footer>
</body>

</html>
